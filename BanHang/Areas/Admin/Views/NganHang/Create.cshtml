@model BanHang.Models.Bank

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create", "NganHang", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-header">
            <h5>Thêm Mới Tài Khoản Thanh Toán</h5>
        </div>
        <div class="card-body table-border-style">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @if (ViewBag.SuccessCreate != null)
            {
                <div class="alert alert-success">@ViewBag.SuccessCreate</div>
            }
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label>Ngân Hàng: <span class="label-required">*</span></label>
                        @Html.EditorFor(model => model.BankName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.BankName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="form-group">
                        <label>Số tài khoản: <span class="label-required">*</span></label>
                        @Html.EditorFor(model => model.AccountNumber, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AccountNumber, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="form-group">
                        <label>Tên Tài Khoản: <span class="label-required">*</span></label>
                        @Html.EditorFor(model => model.AccountName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AccountName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                            <label>Trạng thái: <span class="label-required"></span></label>
                            <select id="inputState" class="form-control" name="cboStatus">

                                <option value="0" selected>Không hoạt động</option>
                                <option value="1" selected>Đang hoạt động</option>

                            </select>
                        </div>
                </div>

                <div class="col-lg-12">
                    <div class="form-group">
                        <label>Chi nhánh: <span class="label-required">*</span></label>
                        @Html.EditorFor(model => model.Branch, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Branch, "", new { @class = "text-danger" })
                        
                    </div>
                </div>

                <div class="col-lg-12">
                    <div class="form-group" style="margin-top: .5rem;">
                        <br />
                        <input type="submit" value="Ghi dữ liệu" class="btn btn-primary" />
                        @Html.ActionLink("Quay lại", "Index")
                    </div>
                </div>
            </div>

        </div>
    </div>
}

