                                <li><a href="/laptop?filters={&quot;sort&quot;:&quot;4&quot;}&amp;search=true"><span class="fa fa-angle-right"></span> Mới cập nhật</a></li>
                                <li><a href="/laptop?filters={&quot;sort&quot;:&quot;5&quot;}&amp;search=true"><span class="fa fa-angle-right"></span> Sản phẩm cũ</a></li>
                                <li><a href="/laptop?filters={&quot;sort&quot;:&quot;6&quot;}&amp;search=true"><span class="fa fa-angle-right"></span> Xem nhiều h&#244;m nay</a></li>
                                <li><a href="/laptop?filters={&quot;sort&quot;:&quot;7&quot;}&amp;search=true"><span class="fa fa-angle-right"></span> Xem nhiều tuần n&#224;y</a></li>
                                <li><a href="/laptop?filters={&quot;sort&quot;:&quot;8&quot;}&amp;search=true"><span class="fa fa-angle-right"></span> Xem nhiều th&#225;ng n&#224;y</a></li>
                                <li><a href="/laptop?filters={&quot;sort&quot;:&quot;10&quot;}&amp;search=true"><span class="fa fa-angle-right"></span> Xem nhiều năm nay</a></li>
                                <li><a href="/laptop?filters={&quot;sort&quot;:&quot;9&quot;}&amp;search=true"><span class="fa fa-angle-right"></span> Xem nhiều nhất</a></li>
                                <li><a href="/laptop?filters={&quot;sort&quot;:&quot;11&quot;}&amp;search=true"><span class="fa fa-angle-right"></span> Kết quả t&#236;m kiếm</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <section>
        <div class="container">

            <a name="page_1"></a>
            <div class="list-product">
                <h1>Laptop</h1>
                <div class="col-content lts-product">
                    @foreach (var item in Model)
                    {
                        decimal? giamgia = item.Price - item.PromotionPrice;
                    <div class="item">

                        <div class="img">
                            <a href="/lap-top/apple-imac-2021-m1-24-512gb-chinh-hang-apple-viet-nam" title="@item.Name">
                                <img src="@item.Image" alt="@item.Name" title="@item.Name">
                            </a>


                        </div>
                        <span class="sales">
                            <i class="icon-flash2"></i> Giảm @giamgia ₫
                        </span>
                        <br />
                        <br />
                        @if (item.ManufacturerID == 1)
                        {
                            <div class="sticker sticker-left">
                                <span>
                                    <img src="~/ContentWeb/Content/web/sticker/apple.png" title="Ch&#237;nh h&#227;ng Apple" />
                                </span>
                            </div>
                        }

                        <br />
                        <div class="info">
                            <br />
                            <a href="/lap-top/apple-imac-2021-m1-24-512gb-chinh-hang-apple-viet-nam" class="title" title="@item.Name">@item.Name</a>
                            <span class="price">
                                <strong>@item.PromotionPrice đ</strong>
                                <strike>@item.Price đ</strike>
                            </span>


                        </div>
                        <div class="note">
                            <span class="bag">KM</span> <label title="Ưu đ&#227;i mua th&#234;m bao da k&#232;m b&#224;n ph&#237;m Microsoft Surface Pro - Ch&#237;nh h&#227;ng với gi&#225; chỉ c&#242;n 2.590.000đ">Ưu đ&#227;i mua th&#234;m bao da k&#232;m b&#224;n ph&#237;m...</label>
                        </div>
                        <div class="promote">
                            <a href="/lap-top/microsoft-surface-pro-7-12-3-i5-8gb-256gb-khong-kem-ban-phim">
                                <ul>
                                    <li><span class="bag">KM</span> Ưu đ&#227;i mua th&#234;m bao da k&#232;m b&#224;n ph&#237;m Microsoft Surface Pro - Ch&#237;nh h&#227;ng với gi&#225; chỉ c&#242;n 2.590.000đ</li>
                                </ul>
                            </a>
                        </div>


                    </div>
                    }

                    
                </div>
            </div>

            <div id="page-holder"></div>



        </div>
    </section>







    <iframe src="https://asia.creativecdn.com/tags?id=pr_n4X0y6ApZyJaHX1dNxQd_category2_26" width="1" height="1" scrolling="no" frameBorder="0" style="display: none;"></iframe>
