@model PagedList.IPagedList<BanHang.Models.Product>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Laptop";
    Layout = "~/Views/Shared/LayoutWeb.cshtml";
}
@{
    var lstHang = (List<BanHang.Models.Manufacturer>)Session["Hang"];
}


<!doctype html>
<html>


<body>



    <section>
        <div class="container">
            <ol class="breadcrumb" itemscope itemtype="http://schema.org/BreadcrumbList">
                <li itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
                    <a itemprop="item" href="/"><span itemprop="name" content="Trang chủ"><i class="icon-home" title="Trang chủ"></i> Trang chủ</span></a>
                    <meta itemprop="position" content="1" />
                </li>

                <li itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
                    <i class="fa fa-angle-right"></i> <a itemprop="item" href="/laptop" title="Laptop" class="actived"><span itemprop="name" content="Laptop">Laptop</span></a>
                    <meta itemprop="position" content="2" />
                </li>
            </ol>
        </div>
    </section>



    <section>
        <div class="container">
            <div class="product-filters2">
                <div class="left">
                    <strong class="label">Lọc danh sách:</strong>

                    <div class="facet">
                        <label>
                            <a href="javascript:;">Thương hiệu <i class="icon-rightar"></i></a>
                        </label>
                        <div class="sub">
                            <ul>
                                @foreach (var itemhang in lstHang)
